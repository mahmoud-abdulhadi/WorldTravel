
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>World Traveller  - @ViewBag.Title </title>

    <link href="~/libs/bootstrap.min.css" rel="stylesheet" />
    <link href="~/libs/yeti/bootstrap.min.css" rel="stylesheet" />
    <link href="~/libs/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div id="sidebar">
        @if (User.Identity.IsAuthenticated)
        {
            <img src="~/img/bruce.jpg" alt="User Avatar" class="headshot" />
            <span id="username">@User.Identity.Name</span>
        }
        <ul class="nav">
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
            @if (User.Identity.IsAuthenticated)
            {
                <li><a asp-controller="App" asp-action="Trips">My Trips</a></li>
                <li><a asp-controller="Auth" asp-action="Logout">Logout</a></li>
            }
            @if (!User.Identity.IsAuthenticated)
            {

                <li><a asp-controller="Auth" asp-action="Register">Register</a></li>
                <li><a asp-controller="Auth" asp-action="Login">Login</a></li>
            }
        </ul>

    </div>

    <div id="wrapper">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <ul class="nav navbar-nav navbar-left">
                    <li>
                        <button class="btn btn-primary" id="menuToggler">
                            <i class="fa fa-angle-left"></i>

                        </button>
                    </li>
                </ul>

                <a asp-controller="App" asp-action="Index" class="navbar-brand">World Traveller</a>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="#" class="btn btn-sm btn-info">
                            <i class="fa fa-save"></i> Save
                        </a>
                    </li>
                    <li>
                        <a href="#" class="btn btn-sm btn-info">
                            <i class="fa fa-print"></i> Print
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <div id="main" class="container-fluid">
            <div>

            </div>

            @RenderBody()

        </div>
        <div id="footer" class="container-fluid">
            <div class="navbar navbar-inverse navbar-fixed-bottom">
                <h4 class="text-center text-info">
                    &copy; 2017 World Traveller Co.
                </h4>
            </div>
        </div>

    </div>
    <script type="text/javascript" src="~/libs/jquery.min.js"></script>
    <script type="text/javascript" src="~/libs/bootstrap.min.js"></script>

    <environment names="Development">
        <script src="~/js/site.js" type="text/javascript"></script>
    </environment>
    <environment names="Production,Staging">
        <script src="~/lib/_app/site.js" type="text/javascript"></script>
    </environment>

    @RenderSection("scripts", false);
</body>
</html>